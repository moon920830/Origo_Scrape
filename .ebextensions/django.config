option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: app.settings
    PYTHONPATH: "/var/app/current/app:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: app.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: /var/app/current/content/static/

container_commands:
  00_test_output:
    command: "echo 'testing.....'"
  01_migrate:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python3 manage.py collectstatic --noinput"